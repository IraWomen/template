      source(media='(min-width: 1440px)', srcset='img/logo-desktop.svg')
      source(media='(min-width: 768px)', srcset='img/logo-tablet.svg')
      img.page-header__logo-image(src='img/logo_mobile.svg', alt='Логотип')
  nav.nav.nav--opened
    button.nav__toggle(type='button')
      span.visually-hidden Открыть меню
